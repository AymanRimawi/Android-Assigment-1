<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".AddActivity"

    >

    <Button
        android:id="@+id/back2_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#3F51B5"
        android:text="&lt;--"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="65dp"
        android:text="Practice type :"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/PracticeType_spn"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:entries="@array/pratices" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Rounds :"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/Round3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Rounds"
            android:textColor="@color/white"
            />

        <RadioButton
            android:id="@+id/Round4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 Rounds"
            android:textColor="@color/white" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Count per Round :"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/CountperRound"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:backgroundTint="#2A3FAD"
        android:hint="Enter the count per round"
        android:inputType="number"
        android:textColor="@color/white"
        android:textColorHint="#757373" />

    <Button
        android:id="@+id/Ok_bt"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:backgroundTint="#2A3FAD"
        android:text="OK"
        android:textSize="20dp" />


</LinearLayout>